pipeline {   
    agent any
   
    stages {        
        stage("copy files to ansible server") {
            steps {
                script {
                   echo "copying all neccesary files to ansible server"
                   dir('java-maven-app'){

                        sshagent(['ansible-server-key']){                        
                            sh "scp -o StrictHostKeyChecking=no ansible/* root@167.172.30.107:/root"
                            withCredentials([sshUserPrivateKey(credentialsId: 'ansible-ec2-key', keyFileVariable: 'keyfile', usernameVariable: 'user')]) {
                                sh 'scp $keyfile root@167.172.30.107:/root/ssh-key.pem'
                            }                 

                        }
                   }

                }
            }
        }

        stage("execute ansible playbook"){
            steps{
                script{
                    echo "executing ansible playbook to ocnfigure ec2"
                    def remote = [:]
                    remote.name = "ansible-server"
                    remote.host = "167.172.30.107"
                    remote.allowAnyHosts = true
                    withCredentials([sshUserPrivateKey(credentialsId: 'ansible-server-key', keyFileVariable: 'keyfile', usernameVariable: 'user')]) {

                        remote.user = user
                        remote.identityFile = keyfile
                        sshCommand remote: remote, command: "ls -l"        
                    }  
                }
            }
        }
    }
} 
